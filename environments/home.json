{
  "name": "home",
  "description": "Home Server environment",
  "cookbook_versions": {
  },
  "json_class": "Chef::Environment",
  "chef_type": "environment",
  "default_attributes": {
    "shorewall": {
      "default_interface_settings": {
        "options": "tcpflags,routefilter,nosmurfs,dhcp"
      },
      "zone_hosts": {
        "lan": "192.168.2.0/24"
      },
      "zone_interfaces": {
        "lan": "eth0"
      },
      "zones": [
        { "zone": "fw", "type": "firewall" },
        { "zone": "lan", "type": "ipv4" }
      ],
      "rules": [
        {
        "description": "Incoming SSH from Local Network.",
        "source": "lan",
        "dest": "fw",
        "proto": "tcp",
        "dest_port": 22,
        "action": "ACCEPT"
      },
      {
        "description": "Incoming NFS from Local Network.",
        "source": "lan",
        "dest": "fw",
        "proto": "tcp",
        "dest_port": 111,
        "action": "ACCEPT"
      },
      {
        "description": "Incoming NFS from Local Network.",
        "source": "lan",
        "dest": "fw",
        "proto": "tcp",
        "dest_port": 2049,
        "action": "ACCEPT"
      },
      {
        "description": "Incoming Transmission from Local Network.",
        "source": "lan",
        "dest": "fw",
        "proto": "tcp",
        "dest_port": 9091,
        "action": "ACCEPT"
      }
      ]
    },
    "chef_client": { "interval": 900, "splay": 120 },
    "authorization": {
      "sudo": {
        "groups": ["sysadmin"],
        "passwordless": "true"
      }
    },
    "yum": { "repoforge_release": "0.5.3-1" }
  },
  "override_attributes": {
  }
}
