{
  "name": "web-server",
  "description": "Basic Web Server",
  "json_class": "Chef::Role",
  "default_attributes": {
    "shorewall": {
      "rules": [
        { "description": "Web Services", "source": "net", "dest": "fw", "proto": "tcp", "dest_port": "http,https", "action": "ACCEPT" }
      ]
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[apache2]",
    "recipe[apache2::mod_proxy]",
    "recipe[apache2::mod_proxy_http]",
    "recipe[apache2::mod_ssl]",
    "recipe[apache2::mod_rewrite]",
    "recipe[suphp]"
  ],
  "env_run_lists": {
  }
}
